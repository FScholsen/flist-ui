{
  "name": "flist-ui",
  "version": "0.0.0-alpha",
  "description": "Flist UI Web components monorepo",
  "private": true,
  "scripts": {
    "build": "npx lerna run build",
    "build:global": "npx lerna exec -- rollup -c=../../rollup.config.js",
    "watch": "npx lerna run watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "npx lerna exec -- eslint './src/**/*.ts'",
    "lint:lit-analyzer": "npx lerna exec -- lit-analyzer './src/**/*.ts'",
    "prettier": "npx prettier --write .",
    "clean": "npm run clean:packages",
    "clean:packages": "npm run clean:dist && npx lerna clean",
    "clean:dist": "npx lerna exec -- rm -rf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fscholsen/flist-ui.git"
  },
  "author": "fscholsen <fscholsen@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "lerna": "^3.22.1",
    "lit-analyzer": "^1.2.1",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
