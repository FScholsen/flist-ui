{
  "name": "flist-ui",
  "version": "0.0.0-alpha",
  "description": "Flist UI Web components monorepo",
  "private": true,
  "author": "fscholsen <fscholsen@gmail.com>",
  "license": "ISC",
  "scripts": {
    "bootstrap": "npx lerna bootstrap && npm run build:dist && npm run build:types",
    "prebuild": "npm run clean:dist",
    "build": "npm run build:dist && npm run build:types",
    "build:dist": "npx lerna exec --parallel -- rollup -c=./rollup.config.js",
    "build:types": "npx lerna exec --parallel -- tsc -p ./tsconfig.types.json",
    "check:types": "npx tsc || echo Done.",
    "watch": "npx lerna exec -- rollup -c=./rollup.config.js -w",
    "prepare": "npx lerna bootstrap",
    "publish": "npx lerna publish",
    "lint": "npm run check:types; npm run lint:css && npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "npx lerna exec -- eslint '.' -c '../../.eslintrc.js' --ext '.js,.ts' --ignore-path '../../.eslintignore'",
    "lint:lit-analyzer": "npx lerna exec -- lit-analyzer './src'",
    "lint:css": "stylelint 'packages/**/*.css'",
    "prettier": "npx lerna exec -- npx prettier --write . --ignore-path ../../.prettierignore",
    "clean": "npm run clean:packages",
    "clean:packages": "npm run clean:dist && npx lerna clean",
    "clean:dist": "npx lerna exec --parallel -- rm -rf ./dist",
    "test": "karma start karma.conf.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "docs": "npx wca analyze 'packages/**/src/*.ts' --format markdown",
    "build:docs": "npx lerna exec --parallel -- wca './src/*.ts' --outFile 'dist/custom-elements.json'",
    "create-package": "bin/cli.js create-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fscholsen/flist-ui.git"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@open-wc/karma-esm": "^4.0.0",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/web-components": "^6.1.21",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "autoprefixer": "^10.2.5",
    "chai": "^4.3.4",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-wc": "^1.3.0",
    "husky": "^4.3.8",
    "inquirer": "^8.0.0",
    "karma": "^6.2.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "lit-analyzer": "^1.2.1",
    "mocha": "^8.3.2",
    "pascal-case": "^3.1.2",
    "postcss": "^8.2.8",
    "prettier": "2.2.1",
    "puppeteer": "^8.0.0",
    "rollup": "^2.42.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^9.2.4",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.2.3",
    "web-component-analyzer": "^1.1.6"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.13.10",
    "lit-element": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": "eslint --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}
